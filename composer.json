{
    "name": "ray/aop",
    "description": "An aspect oriented framework",
    "keywords": [
        "AOP"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Akihito Koriyama",
            "email": "akihito.koriyama@gmail.com"
        }
    ],
    "require": {
        "php": ">=7.0.0",
        "doctrine/annotations": "^1.4",
        "nikic/php-parser": "^4.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.5"
    },
    "autoload": {
        "psr-4": {
            "Ray\\Aop\\": ["src/"]
        },
        "files": ["annotation_loader.php"]
    },
    "autoload-dev": {
        "psr-4": {
            "Ray\\Aop\\": ["tests/", "tests/Fake/"]
        }
    },
    "suggest": {
        "ray/di": "A dependency injection framework"
    },
    "scripts" :{
        "test": ["@cs", "phpunit", "phpstan analyse -l max src tests -c phpstan.neon --no-progress"],
        "coverage": ["php -dzend_extension=xdebug.so ./vendor/bin/phpunit --coverage-text --coverage-html=build/coverage"],
        "cs": ["php-cs-fixer fix -v --dry-run", "phpcs --standard=./phpcs.xml src"],
        "cs-fix": ["php-cs-fixer fix -v", "phpcbf src"]
    }
}
